{
    "name": "auto-test-project",
    "version": "1.0.0",
    "scripts": {
      "dev": "vite --open",
      "build": "vite build",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:browser": "node scripts/browser-test.js",
      "dev:test": "concurrently \"npm run dev\" \"npm run test:browser\"",
      "build:test": "npm run build && npm run test:browser",
      "auto-test": "nodemon --watch src --ext js,ts,jsx,tsx --exec \"npm run build:test\""
    },
    "devDependencies": {
      "vite": "^5.0.0",
      "jest": "^29.0.0",
      "puppeteer": "^21.0.0",
      "concurrently": "^8.0.0",
      "nodemon": "^3.0.0",
      "open": "^9.0.0"
    }
  }